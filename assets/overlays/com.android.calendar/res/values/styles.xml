<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppBaseTheme" parent="@android:style/Theme.Material.Light">
        <item name="android:colorPrimary">@color/fab_theme_color</item>
        <item name="android:colorPrimaryDark">@color/fab_theme_color_dark</item>
        <item name="android:colorAccent">@color/fab_theme_color_accent</item>
	  </style>

    <style name="AppTheme" parent="@style/AppBaseTheme">
        <item name="android:colorPrimary">@color/fab_theme_color</item>
        <item name="android:colorPrimaryDark">@color/fab_theme_color_dark</item>
        <item name="android:colorAccent">@color/fab_theme_color_accent</item>
	</style>

    <style name="CalendarTheme.WithActionBar" parent="@android:style/Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/fab_theme_color</item>
        <item name="android:colorPrimaryDark">@color/fab_theme_color_dark</item>
        <item name="android:colorAccent">@color/fab_theme_color_accent</item>
        <item name="android:windowNoTitle">false</item>
        <item name="android:startYear">1970</item>
        <item name="android:endYear">2036</item>
        <item name="android:windowActionBar">true</item>
        <item name="android:actionBarStyle">@style/CalendarActionBarStyle</item>
    </style>

    <style name="CalendarActionBarStyle" parent="@android:style/Widget.Material.ActionBar">
        <item name="android:displayOptions">showCustom</item>
        <item name="android:background">@color/fab_theme_color</item>
        <item name="android:backgroundStacked">@color/fab_theme_color</item>
        <item name="android:backgroundSplit">@color/fab_theme_color</item>
    </style>
    <style name="EditEvent_Layout" parent="@android:style/Theme.Material.Light">
	</style>
	
</resources>
